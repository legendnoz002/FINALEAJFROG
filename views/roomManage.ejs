            <a class="nav-link" href="#">คุมสอบ</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#">คำร้อง</a>
          </li>
        </ul>
      </nav>


      <div class="col-sm-10">
        <div class="container">
          
          <ul class="nav nav-tabs">
            <li class="nav-item"><a class="nav-link active" href="/manage/building/room">จัดการตึก</a></li>
          </ul>

          <table class="table table-striped">
              <thead>
                <tr>
                  <td><b>ชื่อห้อง</b></td>
                  <td><b>ชั้น</b></td>
                  <td><b>ห้อง</b></td>
                  <td><b>แก้ไข</b></td>
                  <td><b>ลบ</b></td>
                </tr>
              </thead>
              <tbody>
                <h1><%= building._id %></h1>
                <h5><%= building.room.length %> </h5>
                <% for(var i=0; i < building.room.length ; i++) { %>
                  <tr>
                    <td><%= building.room[i].room_name %></td>
                    <td><%= building.room[i].floor_room %></td>
                    <td><a href="" class="btn btn-primary">ตรวจสอบ</a></td>
                    <td><a href="" class="btn btn-primary">Edit</a></td>
                    <td><a href="/manage/building/deleteRoom/<%= building.room[i]._id %>" class="btn btn-danger">Delete</a></td>
                  </tr>
        
                  <% } %>
                
              </tbody>
            </table>
            <a href="#" class="btn btn-success" data-toggle="modal" data-toggle="modal"
            data-target=".AddRoom">เพิ่ม</a>
            
            
        </div>
      </div>


    </div>
  </div>


  <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-bottom">
    <ul style="width:150px">
      <li>
        &nbsp;
      </li>
    </ul>
  </nav>
   <!-- Modal เพิ่ม -->
   <div class="modal fade AddRoom" tabindex="-1" role="dialog" aria-labelledby="AddRoom"
   aria-hidden="true">
   <div class="modal-dialog modal-xl" role="document">
     <form action="/manage/building/addRoom/<%= building._id %>" method="post">
       <!--อันนี้แก้ managecar-->
       <div class="modal-content">
         <div class="modal-header">
           <h5 class="modal-title" id="AddRoom">
             เพิ่มห้อง</h5>
           <button type="button" class="close" data-dismiss="modal" aria-label="Close">
             <span aria-hidden="true">&times;</span>
           </button>
         </div>
         <div class="modal-body">
           <!-- <div class="input-group mb-3">
             <div class="input-group-prepend">
               <span class="input-group-text" id="inputGroup-sizing-default">ชื่อตึก</span>
             </div>
             <input type="text" name="_id" id="IDbuildingName" style="display: none">
             <input type="text" name="buildingName" id="buildingName" class="form-control"
               aria-label="Sizing example input" required>
           </div> -->
           <div class="form-group row">
             <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">ชื่อห้อง</label>
             <div class="col-sm-10">
                 <!-- <input type="text" name="_id" id="IDbuildingName" style="display: none"> -->
               <input type="text" class="form-control form-control-lg" name="roomName" id="roomName">
             </div>
           </div>
           <div class="form-group row">
             <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">ชั้นที่</label>
             <div class="col-sm-10">
                 <!-- <input type="text" name="_id" id="IDbuildingName" style="display: none"> -->
               <input type="text" class="form-control form-control-lg" name="floor" id="floor">
             </div>
           </div>
         </div>
         <div class="form-group row">
          <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">เเถว</label>
          <div class="col-sm-10">
              <!-- <input type="text" name="_id" id="IDbuildingName" style="display: none"> -->
            <input type="text" class="form-control form-control-lg" name="column" id="column">
          </div>
        </div>
        <div class="form-group row">
          <label for="colFormLabelSm" class="col-sm-2 col-form-label col-form-label-lg">หลัก</label>
          <div class="col-sm-10">
              <!-- <input type="text" name="_id" id="IDbuildingName" style="display: none"> -->
            <input type="text" class="form-control form-control-lg" name="row" id="row">
          </div>
        </div>
         <div class="modal-footer">
           <button type="button" class="btn btn-secondary" data-dismiss="modal">ยกเลิก</button>
           <button type="submit" class="btn btn-primary">ยืนยัน</button>
         </div>
     </form>
   </div>
 </div>
