<%- include('./form/Header'); -%>
<%- include('./form/CSS'); -%>
<%- include('./form/endHeader'); -%>

<div id="wrapper">
  <%- include('./form/Sidebar'); -%>


  <!-- Content Wrapper -->
  <div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">

      <!-- Topbar -->
      <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow"></nav>
      <!-- End of Topbar -->

      <!-- Begin Page Content -->
      <div class="container-fluid">

        <!-- content ข้างในเขียนในนี้นะ -->

        <div class="col-sm-10">
          <div class="container">

            <h1 align="center">จัดการปีการศึกษา</h1>
            <form method="post" action="/manageYear/update">
              <div class="form-group">
                ปีการศึกษาปัจจุบัน <br>
                <input type="text" class="form-control" name="year" placeholder="ปีการศึกษาปัจจุบัน"  value="<%= year[0].year %>">
              </div>
              <div class="form-group">
                ภาคการศึกษา <br>
                <select class="form-control" id="semester" name="semester">
                  <option hidden><%= year[0].semester %></option>
                  <option>ภาคต้น</option>
                  <option>ภาคปลาย</option>
                  <option>ภาคฤดูร้อน</option>
                </select>
              </div>

              <button type="submit" class="btn btn-info float-right">ยืนยัน</button>

            </form>
          </div>
        </div>

      </div>
      <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->



    <!-- Footer -->
    <footer class="sticky-footer bg-white">
      <div class="container my-auto">
        <div class="copyright text-center my-auto">
          <span>กูทำเองไม่ได้ขอตังใคร xd</span>
        </div>
      </div>
    </footer>
    <!-- End of Footer -->

  </div>
  <!-- End of Content Wrapper -->

</div>


<%- include('./form/Bottom'); -%>